{
  "name": "@gaelmotte/gmotte-sfdx-plugin",
  "description": "Personal sfdx plugin to ease my everyday life",
  "version": "0.4.0-alpha.1",
  "author": "Gael Motte",
  "bugs": {
    "url": "https://github.com/gaelmotte/gmotte-sfdx-plugin/issues"
  },
  "dependencies": {
    "@oclif/core": "^1",
    "@salesforce/command": "^5",
    "@salesforce/core": "^3",
    "inquirer": "8.2.4",
    "tslib": "^2"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@salesforce/ts-sinon": "^1",
    "@types/chai": "^4",
    "@types/inquirer": "^8.2.4",
    "@types/mocha": "^8",
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4",
    "chai": "^4",
    "eslint": "^7",
    "eslint-config-prettier": "^8",
    "eslint-plugin-header": "^3",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsdoc": "^35",
    "eslint-plugin-prettier": "^3",
    "eslint-plugin-typescript": "^0",
    "gh": "^2.8.9",
    "mocha": "^9",
    "not-prerelease": "^1.0.1",
    "nyc": "^15",
    "oclif": "^3",
    "prettier": "^2",
    "sinon": "10.0.0",
    "ts-node": "^10",
    "typescript": "4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/npm-shrinkwrap.json"
  ],
  "homepage": "https://github.com/gaelmotte/gmotte-sfdx-plugin",
  "keywords": [
    "sfdx-plugin"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "topics": {
      "org": {
        "description": "Commands to manage your orgs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gaelmotte/gmotte-sfdx-plugin.git"
  },
  "scripts": {
    "build": "rm -rf lib && tsc -p .",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "oclif-paths": "ts-node --project tsconfig.json -r tsconfig-paths/register node_modules/.bin/oclif",
    "test": "nyc --extension .ts --require ts-node/register mocha --forbid-only \"test/**/*.test.ts\"",
    "bumpversion": "is-prerelease && npm version minor -m \"v%s[ci skip]\"|| npm version patch -m \"v%s[ci skip]\"",
    "bumpprerelease": "is-prerelease &&  npm version prerelease --preid alpha -m \"v%s[ci skip]\"|| npm version preminor --preid alpha -m \"v%s[ci skip]\"",
    "posttest": "eslint src/**/*.ts test/**/*.ts",
    "version": "rm -rf lib && tsc -b && npm run oclif-paths manifest && npm run oclif-paths readme && git add README.md && git add -A -f lib",
    "postversion": "git push --set-upstream origin $CIRCLE_BRANCH && git push --tags && rm -rf lib && rm -f oclif.manifest.json"
  }
}
